
@import "partial/_colors.styl"

$font-title = 'VT323'
$font-text = 'ShareTechMono'

$font-title-size-sm = 48px
$font-title-size-md = 64px
$font-title-size-lg = 80px

$font-subtitle-size-sm = 18px
$font-subtitle-size-md = 24px
$font-subtitle-size-lg = 28px

$font-heading-size-sm = 16px
$font-heading-size-md = 20px
$font-heading-size-lg = 24px

$font-text-size-lg = 18px
$font-text-size-md = 16px
$font-text-size-sm = 14px

// Content padding values.
// NOTE: I'm aware they're all the same value, but this allows me to tweak
// individual sides without having to change the actual style definitions
$content-padding-top =  0.85em
$content-padding-bottom = $content-padding-top
$content-padding-left = $content-padding-top
$content-padding-right = $content-padding-top
$content-padding-general = $content-padding-top

// Variable(s) for the navbar.
$navbar-height = 48px

// Text color for Site/Post/Page titles and subtitles
$text-color-title = $color-light
$text-color-subtitle = $color-mid

// Most common text color
$text-color-default = $color-bright

