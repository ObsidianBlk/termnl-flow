
.navbar
  position fixed
  width 100%
  height $navbar-height
  left 0
  top 0
  z-index 999

.navbar .navshade
  background $color-terminal
  border-left 1px solid $color-term-border
  border-right 1px solid $color-term-border
  border-bottom 1px solid $color-term-border
  padding 4px 4px


.header-big
  display flex
  align-items center
  justify-content center
  width 100%
  height 200px
  position relative
  background $color-dark
  border-bottom 1px solid $color-term-border
  &:after
    content ''
    position absolute
    bottom -1px
    left 25%
    width 50%
    border-bottom: 1px solid $color-dark


generate-decoration-bottom(10, 50, 100)

.term-box
  display flex
  width 100%
  background $color-terminal
  border 1px solid $color-term-border
  &.term-chained
    margin-top 10px

// Term-box-thumb improvements based on answer found...
// https://stackoverflow.com/questions/19192892/css-how-can-i-set-image-size-relative-to-parent-height
.term-box .term-box-thumb
  position relative
  width 112px
  height auto
  display inline-block
  overflow hidden
  border-right 1px solid $color-term-border
  & img
    position absolute
    display block
    top 50%
    left 50%
    min-width 100%
    min-height 100%
    transform translate(-50%, -50%)


@media only screen and (min-width: 768px)
  .term-box .term-box-thumb
    width 120px

@media only screen and (min-width: 1024px)
  .term-box .term-box-thumb
    width 128px


