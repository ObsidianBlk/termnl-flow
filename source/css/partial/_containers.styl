

.header-big
  display flex
  align-items center
  justify-content center
  width 100%
  height 200px
  position relative
  background $background-color
  border-bottom 1px solid $text-color-highlight
  &:after
    content ''
    position absolute
    bottom -1px
    left 25%
    width 50%
    border-bottom: 1px solid $background-color


.term-box
  display flex
  width 100%
  margin-top 0.4em
  background $background-content
  border 1px solid $text-color-highlight

.term-box .term-box-thumb
  width 180px
  height 180px
  display inline-block
  & img
    width inherit
    height inherit
    object-fit cover

.content
  padding 0.85em
