.nav-menu
  padding 0.2em 0.2em 0.2em 0
  & ul
    margin 0
    padding 0
    list-style none
    &:first-child:before
      color $color-term-border
      content '/'

  & li
    display inline-block
    padding 0
    margin-left -0.5em
    &:after
      color $color-term-border
      content '/'

  & a
    padding 0 0.4em
    font-weight bold
